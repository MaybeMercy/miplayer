<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/notification_albumcover"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="0dp"
        android:layout_alignParentLeft="true"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:src="@drawable/ic_launcher"/>
    <LinearLayout
        android:layout_toRightOf="@id/notification_albumcover"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/notification_songtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textSize="24dp"
            android:hint="21 Guns"/>
        <TextView
            android:id="@+id/notification_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="16dp"
            android:hint="Green Day"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingBottom="6dp"
            android:orientation="horizontal"
            android:visibility="visible">
            <ImageView
                android:id="@+id/notification_previous"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_music_previous"
                android:background="#00000000"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/notification_play"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/song_play"
                android:background="#00000000"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/notification_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_music_next"
                android:background="#00000000"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>