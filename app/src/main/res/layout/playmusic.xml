<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/play_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_play_back"/>
        <TextView
            android:id="@+id/play_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/play_back"
            android:textStyle="bold"
            android:textSize="23sp"
            android:text="21 Guns"/>
        <TextView
            android:id="@+id/play_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/play_back"
            android:layout_below="@id/play_song_name"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:text="American Idiot"/>
        <TextView
            android:id="@+id/play_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/play_song_name"
            android:layout_toRightOf="@id/play_album"
            android:textSize="15sp"
            android:text="The Green Day"/>
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:background="#FFFFFF">
    </android.support.v4.view.ViewPager>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="85dp">
        <ImageButton
            android:id="@+id/play_start"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerInParent="true"
            android:background="#4c9f34"/>
        <ImageButton
            android:id="@+id/play_precious"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/play_start"
            android:background="#4c8efa"/>
        <ImageButton
            android:id="@+id/play_next"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/play_start"
            android:background="#4c8efa"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">
        <TextView
            android:id="@+id/play_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="13dp"
            android:text="02:20"/>
        <TextView
            android:id="@+id/play_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="13dp"
            android:text="05:30"/>
        <SeekBar
            android:id="@+id/play_progress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/play_time"
            android:layout_marginTop="5dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progress="50"/>
    </RelativeLayout>
</LinearLayout>