<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/findmusic_viewpager_img"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:src="@drawable/findmusic_sample"
        android:adjustViewBounds="true"
        android:contentDescription="推荐"/>
    <LinearLayout
        android:id="@+id/findmusic_viewpager_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/findmusic_viewpager_img"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <View
            android:id="@+id/dot_0"
            android:layout_width="@dimen/dot_width"
            android:layout_height="@dimen/dot_length"
            android:layout_marginLeft="@dimen/dot_margin_left"
            android:layout_marginRight="@dimen/dot_margin_right"
            android:background="@drawable/dot_focused"/>
        <View
            android:id="@+id/dot_1"
            android:layout_width="@dimen/dot_width"
            android:layout_height="@dimen/dot_length"
            android:layout_marginLeft="@dimen/dot_margin_left"
            android:layout_marginRight="@dimen/dot_margin_right"
            android:background="@drawable/dot_focused"/>
        <View
            android:id="@+id/dot_2"
            android:layout_width="@dimen/dot_width"
            android:layout_height="@dimen/dot_length"
            android:layout_marginLeft="@dimen/dot_margin_left"
            android:layout_marginRight="@dimen/dot_margin_right"
            android:background="@drawable/dot_normal"/>
        <View
            android:id="@+id/dot_3"
            android:layout_width="@dimen/dot_width"
            android:layout_height="@dimen/dot_length"
            android:layout_marginLeft="@dimen/dot_margin_left"
            android:layout_marginRight="@dimen/dot_margin_right"
            android:background="@drawable/dot_focused"/>
        <View
            android:id="@+id/dot_4"
            android:layout_width="@dimen/dot_width"
            android:layout_height="@dimen/dot_length"
            android:layout_marginLeft="@dimen/dot_margin_left"
            android:layout_marginRight="@dimen/dot_margin_right"
            android:background="@drawable/dot_normal"/>
    </LinearLayout>
</RelativeLayout>
